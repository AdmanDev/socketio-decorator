{
  "name": "@admandev/socketio-decorator",
  "version": "1.3.3",
  "description": "This library allows you to use Socket.io with TypeScript decorators, simplifying the integration and usage of Socket.io in a TypeScript environment.",
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "author": "Admandev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdmanDev/socketio-decorator"
  },
  "keywords": [
    "socket.io",
    "decorator",
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsup",
    "dev": "tsc --noEmit && tsup --sourcemap",
    "test": "jest",
    "lint": "eslint src tests",
    "upgrade-deps": "npx npm-check-updates -u && yarn install"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "9.30.0",
    "eslint-plugin-jsdoc": "^51.2.3",
    "jest": "^30.0.3",
    "shelljs": "^0.10.0",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "socket.io": "^4.8.1"
  },
  "optionalDependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2"
  }
}