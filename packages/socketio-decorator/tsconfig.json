{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "noEmit": true,
        "outDir": "dist",
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}